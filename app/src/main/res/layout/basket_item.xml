<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="12dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/basket_image_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/basket_product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ex_basket_item"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/delete_product_block"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/basket_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_delete_basket"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
        
        <TextView
            android:id="@+id/basket_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/basket_image_cardView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Драконий фрукт"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/dark_black"
            android:fontFamily="@font/tt_norms_pro_500"/>
        <TextView
            android:id="@+id/basket_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/basket_product_name"
            app:layout_constraintTop_toBottomOf="@id/basket_product_name"
            tools:text="Цена 340 с за шт"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/tt_norms_pro_500"/>

        <TextView
            android:id="@+id/basket_product_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tt_norms_pro_700"
            android:textColor="@color/main_green"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/basket_product_name"
            app:layout_constraintTop_toBottomOf="@id/basket_product_price"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:text="56 тг" />


        <ImageView
            android:id="@+id/ic_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_shape"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/basket_product_total_price"/>

        <TextView
            android:id="@+id/quantity_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ic_minus"
            app:layout_constraintEnd_toStartOf="@id/ic_plus"
            app:layout_constraintTop_toTopOf="@id/ic_minus"
            app:layout_constraintBottom_toBottomOf="@id/ic_minus"
            tools:text="1"
            android:textSize="20sp"
            android:textColor="@color/dark_black"
            android:fontFamily="@font/tt_norms_pro_500"
            />

        <ImageView
            android:id="@+id/ic_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_shape"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/ic_minus"
            app:layout_constraintTop_toBottomOf="@id/product_price"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>